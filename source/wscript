#!/usr/bin/env python
# encoding: utf-8

def build(ctx):
  ctx.stlib(
      source = [
        'dcpu.cc',
        'disassembler.cc',
        ],
      target = 'dcpu',
      includes = [
        '.',
        ],
      use = [
        'NCURSES',
        ],
      cxxflags = [
        '-g',
        ])
  ctx.objects(
      source = [
        'dcpu_test.cc',
        'disassembler_test.cc',
        ],
      target = 'dcpu_tests',
      includes = [
        '../libraries/gtest-1.6.0/include',
        '.',
        ],
      use = [
        'dcpu',
        'gtest',
        ])
  ctx.program(
      source = [
        'main.cc',
        ],
      target = '../dcpu',
      use = [
        'dcpu',
        ],
      cxxflags = [
        '-g',
        ])
