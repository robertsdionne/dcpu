#!/usr/bin/env python
# encoding: utf-8

def build(ctx):
  ctx.program(
      source = [
          'dcpu.cc',
          'main.cc',
          ],
      target = '../dcpu',
      includes = [
        '.',
        ],
      use = [
        'NCURSES',
        ],
      cxxflags = [
        '-g',
        ])
